<VirtualHost *:80>
    ServerName {{ site_name }}
    ServerAlias www.{{ site_name }}

     SetEnv APPLICATION_ENV development
     SetEnv APPLICATION_CONFIG user

    DocumentRoot /var/www/{{ site_name }}/{{ site_pub }}
    <Directory /var/www/{{ site_name }}/{{ site_pub }}>
        AllowOverride All
        Order Allow,Deny
        Allow from All
    </Directory>

    # uncomment the following lines if you install assets as symlinks
    # or run into problems when compiling LESS/Sass/CoffeeScript assets
     <Directory /var/www/{{ site_name }}>
         Options FollowSymlinks
     </Directory>

    ErrorLog /var/log/apache2/{{ site_name }}_error.log
    CustomLog /var/log/apache2/{{ site_name }}_access.log combined
</VirtualHost>
